@model SistemaBliss.EN.Servicio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Edit", "Servicio", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="seccion-registro-header">
        <h2 class="titulo">Edita un servicio existente</h2>
        <p class="parrafo">Edita los datos necesarios del servicio para mantener actualizada su información</p>

        <div class="form-group d-flex gap-2">
            <button type="submit" class="btn-morado">Guardar</button>
            @Html.ActionLink("Cancelar", "Index", "Servicios", new { @class = "btn-second" })
        </div>
    </div>

    <div class="form-inputs mt-4">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdServicio)

        <div class="form-group">
            @Html.LabelFor(model => model.IdCategoriaServicio, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdCategoriaServicio, new SelectList(ViewBag.Categorias, "Value", "Text", null), new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdCategoriaServicio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdEstado, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IdEstado, new SelectList(ViewBag.Estados, "Value", "Text", null), new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.IdEstado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripción, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripción, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripción, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiasAnticipacion, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DiasAnticipacion, new { @class = "form-control", type = "number", min = "1" })
                @Html.ValidationMessageFor(model => model.DiasAnticipacion, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Restricciones, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Restricciones, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Restricciones, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Precio, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control", type = "number", step = "0.01", min = "0" })
                @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Duracion, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Duracion, "{0:hh\\:mm}", new { @class = "form-control", type = "time" })
                @Html.ValidationMessageFor(model => model.Duracion, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Imagen, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                <input type="file" id="formFile" name="UploadImage" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.Imagen))
                {
                    <img class="d-none" src="@Url.Content(Model.Imagen)" alt="Imagen del usuario" style="max-width: 80px; max-height: 80px; border-radius:500px;" />
                }

                @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}